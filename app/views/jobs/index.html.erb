<h1>Jobs List</h1>
<div id="jobs">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <td><%= job.title %></td>
        <td><%= job.body %></td>
        <td><%= link_to "Show", job,  class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to "Create job", new_job_path, class: "btn btn-primary" %>
