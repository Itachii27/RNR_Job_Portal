<h1>Users List</h1>
<div id="users">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th>Job Applied</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Show", user,  class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to "Create user", new_user_path, class: "btn btn-primary" %>
